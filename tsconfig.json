{
	"compilerOptions": {
		"outDir": "dist",
		"lib": [ "ESNext" ],
		"module": "ESNext",
		"moduleResolution": "node",
    "target": "ESNext",
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": true
	},

	"include": [ "src/**/*.ts" ],
	"exclude": [ "node_modules/**" ]
}
